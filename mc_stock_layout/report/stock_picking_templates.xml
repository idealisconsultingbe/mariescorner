<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_delivery_document">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)" />
                <t t-set="partner" t-value="o.partner_id or (o.move_lines and o.move_lines[0].partner_id) or False"/>
                <t t-if="partner" name="partner_header">
                    <t t-set="address">
                        <div t-esc="partner"
                             t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}'/>
                    </t>
                </t>

                <div class="page">
                    <h2>
                        <span t-field="o.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div t-if="partner" class="col-auto">
                            <strong>Customer Number:</strong>
                            <br/>
                            <span t-field="partner.ref"/>
                        </div>
                    </div>
                    <div class="row mt32 mb32">
                        <t t-set="shipping_weight" t-value="0"/>
                        <t t-set="shipping_volume" t-value="0"/>
                        <t t-set="lines" t-value="o.move_lines.filtered(lambda x: x.product_uom_qty)"/>
                        <t t-foreach="lines" t-as="move">
                            <t t-if="o.state=='done'">
                                <t t-set="qty_done" t-value="move.quantity_done"/>
                            </t>
                            <t t-else="">
                                <t t-set="qty_done" t-value="move.reserved_availability"/>
                            </t>
                            <t t-set="shipping_weight" t-value="shipping_weight + (move.product_id.weight * qty_done)"/>
                            <t t-set="shipping_volume" t-value="shipping_volume + (move.product_id.volume * qty_done)"/>
                        </t>
                        <div t-if="o.origin" class="col-auto" name="div_origin">
                            <strong>Order:</strong>
                            <p t-field="o.origin"/>
                        </div>
                        <div t-if="o.state" class="col-auto" name="div_sched_date">
                            <strong>Shipping Date:</strong>
                            <t t-if="o.state == 'done'">
                                <p t-field="o.date_done"/>
                            </t>
                            <t t-if="o.state != 'done'">
                                <p t-field="o.scheduled_date"/>
                            </t>
                        </div>
                        <div t-if="o.picking_type_id.code == 'outgoing' and o.carrier_id" class="col-auto">
                            <strong>Carrier:</strong>
                            <p t-field="o.carrier_id"/>
                        </div>
                        <div t-if="shipping_weight" class="col-auto">
                            <strong>Weight:</strong>
                            <br/>
                            <span t-esc="round(shipping_weight * 100) / 100"/>
                            <span t-field="o.weight_uom_name"/>
                        </div>
                        <div t-if="shipping_volume" class="col-auto">
                            <strong>Volume:</strong>
                            <br/>
                            <span t-esc="round(shipping_volume * 100) / 100"/>
                            <span t-field="o.volume_uom_name"/>
                        </div>
                        <div t-if="partner.vat" class="col-auto">
                            <strong>VAT:</strong>
                            <br/>
                            <span t-field="partner.vat"/>
                        </div>
                        <t t-set="has_hs_code" t-value="o.move_lines.filtered(lambda l: l.product_id.hs_code)"/>
                        <t t-set="has_sales_lot" t-value="o.move_lines.filtered(lambda l: l.sales_lot_id)"/>
                    </div>
                    <table class="table table-sm" name="stock_move_table">
                        <thead style="font-size:10pt;">
                            <tr>
                                <th name="th_sm_product"><span>Product</span></th>
                                <th t-if="has_sales_lot"><span>Manuf NÂ°</span></th>
                                <th t-if="has_hs_code"><span>HS Code</span></th>
                                <th name="th_sm_ord_quantity"><span>Ord. Qty</span></th>
                                <th name="th_sm_deliv_quantity"><span>Deliv. Qty</span></th>
                                <th name="th_sm_deliv_quantity"><span>Volume</span></th>
                                <th name="th_sm_deliv_quantity"><span>Weight</span></th>
                                <th name="th_sm_deliv_quantity"><span>Width</span></th>
                                <th name="th_sm_deliv_quantity"><span>Height</span></th>
                                <th name="th_sm_deliv_quantity"><span>Depth</span></th>
                            </tr>
                        </thead>
                        <tbody style="font-size:10pt;">
                            <tr t-foreach="lines" t-as="move">
                                <t t-if="o.state=='done'">
                                    <t t-set="qty_done" t-value="move.quantity_done"/>
                                </t>
                                <t t-else="">
                                    <t t-set="qty_done" t-value="move.reserved_availability"/>
                                </t>
                                <t t-set="weight" t-value="move.product_id.weight * qty_done"/>
                                <t t-set="volume" t-value="move.product_id.volume * qty_done"/>
                                <td>
                                    <t t-if="move.sale_line_id and move.sale_line_id.short_name">
                                        <span t-field="move.sale_line_id.short_name"/>
                                    </t>
                                    <t t-else="">
                                        <span t-field="move.product_id"/>
                                    </t>
                                    <p t-if="move.description_picking != move.product_id.name">
                                        <span t-field="move.description_picking"/>
                                    </p>
                                </td>
                                <td t-if="has_sales_lot">
                                    <span t-field="move.sales_lot_id.name"/>
                                </td>
                                <td t-if="has_hs_code">
                                    <span t-field="move.product_id.hs_code"/>
                                </td>
                                <td>
                                    <span t-field="move.product_uom_qty"/>
                                    <span t-field="move.product_uom"/>
                                </td>
                                <td>
                                    <span t-esc="qty_done"/>
                                    <span t-field="move.product_uom"/>
                                </td>
                                <td>
                                    <span t-esc="round(volume * 100) /100"/>
                                    <span t-field="o.volume_uom_name"/>
                                </td>
                                <td>
                                    <span t-esc="round(weight * 100) /100"/>
                                    <span t-field="o.weight_uom_name"/>
                                </td>
                                <td>
                                    <span t-field="move.product_id.width"/>
                                    <span>m</span>
                                </td>
                                <td>
                                    <span t-field="move.product_id.height"/>
                                    <span>m</span>
                                </td>
                                <td>
                                    <span t-field="move.product_id.depth"/>
                                    <span>m</span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <p>
                        <t t-if="o.backorder_ids and o.backorder_ids.filtered(lambda x: x.state not in ('done', 'cancel'))">
                            All items couldn't be shipped, the remaining ones will be shipped as soon as they become available.
                        </t>
                    </p>
                    <p>
                        <strong>Control of Products at reception</strong><br/>
                        <span>The products delivered on .... / .... / .... is in accordance with the order and deliverd in good state.</span>
                        <div class="row">
                            <div class="col-6 text-center align-middle" style="min-height:100px;border-top: 2px solid black;border-bottom: 2px solid black;border-left: 2px solid black;border-right: 2px solid black;">
                                <span>Customer Signature</span>
                            </div>
                            <div class="col-6 text-center align-middle" style="min-height:100px;border-top: 2px solid black;border-bottom: 2px solid black;border-left: 2px solid black;border-right: 2px solid black;">
                                <span>Delivery Company Signature</span>
                            </div>
                        </div>
                        <div class="row" style="min-height:30px;border-top: 2px solid black;border-bottom: 2px solid black;border-left: 2px solid black;border-right: 2px solid black;">
                            SO Delivery Comment
                        </div>
                    </p>
                </div>
            </t>
        </t>
    </template>

    <template id="report_deliveryslip">
        <t t-foreach="docs" t-as="o">
            <t t-call="mc_stock_layout.report_delivery_document" t-lang="o.partner_id.lang"/>
        </t>
    </template>

</odoo>
