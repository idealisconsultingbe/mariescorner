<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="mrp_production_form_view" model="ir.ui.view">
            <field name="name">mrp.production.form.view.inherited.sale.information</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='id']/.." position="inside">
                    <field name="show_sale_description" invisible="1"/>
                    <field name="sale_description" attrs="{'invisible': [('show_sale_description', '=', False)]}" />
                </xpath>
                <xpath expr="//field[@name='move_raw_ids']" position="before">
                    <field name="show_sale_comment" invisible="1"/>
                    <div role="alert" class="alert alert-warning" attrs="{'invisible': [('show_sale_comment', '=', False)]}">
                        <label for="sale_comment" string="Sale Order Comment" attrs="{'invisible': [('show_sale_comment', '=', False)]}" />
                        <field name="sale_comment" attrs="{'invisible': [('show_sale_comment', '=', False)]}" />
                    </div>
                </xpath>
            </field>
        </record>

</odoo>
