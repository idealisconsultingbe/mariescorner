<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">view.move.form.inherited.sales.lot</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='analytic_tag_ids']" position="after">
                <field name="sales_lot_ids" optional="show" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>
</odoo>