<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_order_form_view" model="ir.ui.view">
        <field name="name">mc.purchase.order.form.inherited.sales.lot</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="sales_lot_id"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_qty']" position="before">
                <field name="sales_lot_activated" invisible="1"/>
                <field name="sales_lot_supplier_type" invisible="1"/>
                <field name="sales_lot_id" optional="hide"/>
                <field name="fabric_ordered" attrs="{'invisible': ['|', ('sales_lot_activated', '=', False), ('sales_lot_supplier_type', '!=', 'external')]}" optional="hide"/>
            </xpath>
        </field>
    </record>

    <record id="purchase_order_tree_view" model="ir.ui.view">
        <field name="name">mc.purchase.order.tree.inherited.sales.lot</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="sales_lot_id" optional="hide"/>
            </xpath>
        </field>
    </record>

    <record id="pruchase_order_search_view" model="ir.ui.view">
        <field name="name">mc.purchase.order.search.view.inherited.sales.lot</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="sales_lot_id"/>
            </field>
        </field>
    </record>

    <record id="view_purchase_order_filter" model="ir.ui.view">
        <field name="name">mc.purchase.order.filter.inherited.sales.lot</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="sales_lot_id"/>
            </field>
        </field>
    </record>

</odoo>
