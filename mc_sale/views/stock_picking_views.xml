<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">view.picking.form.inherited.lot.button</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='do_print_picking']" position="before">
                <button name="button_update_lot_name" attrs="{'invisible': ['|', '|', ('immediate_transfer', '=', True), ('show_validate', '=', False), ('picking_type_code', '!=', 'incoming')]}" string="Update Lot/Serial Numbers" type="object" groups="stock.group_stock_user" class="o_btn_validate"/>
            </xpath>
        </field>
    </record>
</odoo>