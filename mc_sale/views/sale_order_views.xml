<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_form_view" model="ir.ui.view">
        <field name="name">mc.view.order.form</field>
        <field name="model">sale.order</field>
        <field name="priority">50</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='price_unit']" position="attributes">
                <attribute name="string">Customer Price</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form/group/group/field[@name='price_unit']" position="attributes">
                <attribute name="string">Customer Price</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='price_unit']" position="before">
                <field name="list_price_extra" string="Public Price" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/form/group/group/field[@name='price_unit']" position="before">
                <field name="list_price_extra" string="Public Price"/>
            </xpath>
            <xpath expr="//button[@name='action_confirm'][2]" position="after">
                <field name="po_state" invisible="1"/>
                <button name="action_confirm_purchase_order" string="Send To Manufacturing" type="object" attrs="{'invisible': ['|', ('po_state', '!=', 'draft'), ('state', 'in', ['draft', 'cancel'])]}"/>
            </xpath>
            <!--Useful for sending values to js-->
            <xpath expr="//tree/field[@name='product_template_id']" position="after">
                <field name="fabrics_meterage_needed" invisible="1"/>
                <field name="comment" invisible="1"/>
                <field name="product_sale_price" invisible="1"/>
            </xpath>
            <xpath expr="//tree/field[@name='name']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='name']" position="after">
                <field name="short_name" optional="show"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Comment" name="comment">
                    <field name="comment" nolabel="1"/>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
