<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">view.order.form.inherited.purchase.confirmation</field>
        <field name="model">sale.order</field>
        <field name="priority">50</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_confirm'][2]" position="after">
                <field name="po_state" invisible="1"/>
                <button name="action_confirm_purchase_order" string="Confirm Purchase Order" type="object" attrs="{'invisible': ['|', ('po_state', '!=', 'draft'), ('state', 'in', ['draft', 'cancel'])]}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                <field name="sales_lot_number_visible" invisible="1"/>
                <field name="sales_lot_number" attrs="{'readonly': [('sales_lot_number_visible', '=', False)], 'required': [('sales_lot_number_visible', '=', True)]}"/>
            </xpath>
        </field>
    </record>

</odoo>