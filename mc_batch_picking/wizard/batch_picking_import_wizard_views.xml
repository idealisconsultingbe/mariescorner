<?xml version="1.0"?>
<odoo>

    <record id="batch_picking_import_view_form" model="ir.ui.view">
        <field name="name">batch.picking.import.view.form</field>
        <field name="model">stock.picking.batch.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import File">
                <group>
                   <field name="text_file" string="Select a File to Import"/>
                </group>
                <group string="Lines to Import">
                <field name="batch_picking_import_line_ids" nolabel="1">
                    <tree create="0" delete="0" decoration-danger="not move_line_ids">
                       <field name="lot_name"/>
                       <field name="move_line_ids" widget="many2many_tags"/>
                    </tree>
                </field>
                </group>
                <footer>
                    <button name="import_file_action" string="Import" type="object" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="batch_picking_import_action" model="ir.actions.act_window">
        <field name="name">Batch Picking Import</field>
        <field name="res_model">stock.picking.batch.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_batch_picking_id': active_id}</field>
    </record>

</odoo>
