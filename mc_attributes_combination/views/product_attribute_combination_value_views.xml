<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_attribute_combination_value_tree_view" model="ir.ui.view">
        <field name="name">mc.product.attribute.combination.value.tree.view</field>
        <field name="model">product.attribute.combination.value</field>
        <field name="arch" type="xml">
            <tree name="product_attribute_combination_tree" string="Attributes_combination">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="product_attribute_combination_value_form_view" model="ir.ui.view">
        <field name="name">mc.product.attribute.combination.value.form.view</field>
        <field name="model">product.attribute.combination.value</field>
        <field name="arch" type="xml">
            <form name="product_attribute_combination_value_form">
                <sheet>
                    <group name="main">
                        <field name="attribute_ids" invisible="1"/>
                        <field name="value_combination_ids" options="{'no_open': True}">
                            <tree name="value_combination_tree" string="Values combination" editable="bottom">
                                <field name="attribute_id" domain="[('id', 'in', parent.attribute_ids)]"/>
                                <field name="value_ids" widget="many2many_tags" options="{'no_open': True, 'no_create': True}"/>
                            </tree>
                        </field>
                        <field name="attribute_combination_id" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>