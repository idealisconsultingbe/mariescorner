<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- overwrite sale order report in order to use a custom document with new external layout -->
    <template id="report_saleorder" inherit_id="sale.report_saleorder">
        <xpath expr="//t[@t-call='web.html_container']" position="replace">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="mc_sale_layout.mc_report_saleorder_document" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </xpath>
    </template>

    <!-- custom sale order document -->
    <template id="mc_report_saleorder_document">
        <t t-call="mc_sale_layout.mc_sale_order_external_layout">
            <!-- set doc with context -->
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
            <!-- set a bunch of variables used in external layout -->
            <!-- set doc type -->
            <t t-set="order_type">
                <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                    <span t-if="doc.state not in ['draft','sent']">Order</span>
                    <span t-if="doc.state in ['draft','sent']">Quotation</span>
                </t>
                <t t-if="env.context.get('proforma', False) or is_pro_forma">
                    <span>Pro-Forma Invoice</span>
                </t>
            </t>
            <!-- set doc name -->
            <t t-set="order_name"><span t-field="doc.name"/></t>
            <!-- set doc reference -->
            <t t-set="order_ref">
                <t t-if="doc.client_order_ref"><span t-field="doc.client_order_ref"/></t>
            </t>
            <!-- set doc date -->
            <t t-set="order_date">
                <t t-if="doc.date_order"><span t-field="doc.date_order" t-options="{&quot;widget&quot;: &quot;date&quot;}"/></t>
            </t>
            <!-- set doc validity date -->
            <t t-set="order_validity">
                <t t-if="doc.validity_date and doc.state in ['draft', 'sent']">
                    <span t-field="doc.validity_date" t-options="{&quot;widget&quot;: &quot;date&quot;}"/>
                </t>
            </t>
            <!-- set customer reference -->
            <t t-set="customer_ref">
                <t t-if="doc.partner_id.ref"><span t-field="doc.partner_id.ref"/></t>
            </t>
            <!-- set document pricelist -->
            <t t-set="order_pricelist">
                <t t-if="doc.pricelist_id"><span t-field="doc.pricelist_id"/></t>
            </t>
            <!-- set invoicing address -->
            <t t-set="invoicing_address">
                <div t-field="doc.partner_invoice_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;title&quot;, &quot;name&quot;, &quot;vat&quot;, &quot;payment&quot;], &quot;no_marker&quot;: True, &quot;no_contact_marker&quot;: False}"/>
            </t>
            <!-- set shipping address -->
            <t t-set="shipping_address">
                <div t-field="doc.partner_shipping_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;title&quot;, &quot;name&quot;, &quot;phone&quot;, &quot;mobile&quot;, &quot;email&quot;], &quot;no_marker&quot;: True, &quot;no_contact_marker&quot;: False}"/>
            </t>

            <!-- main container structure -->
            <div class="page">

                <div class="oe_structure"/>

                <div class="row mt16 mb8">
                    <div class="col-4"><h4>Details</h4></div>
                </div>

                <!-- Is there a discount on at least one line? -->
                <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>

                <table class="table-sm" style="width: 100%; border-collapse: collapse; border: 1px solid LightGray;">
                    <thead>
                        <tr>
                            <th name="th_reference" class="text-center" style="padding: 0.5rem 0 0.5rem 0.5rem; height: 2.3rem; line-height: 2.3rem;">
                              <span class="text-uppercase" style="display: inline-block; vertical-align: center; background-color: LightGray; width: 100%; height: 100%; font-size: 0.8rem;">Ref</span>
                            </th>
                            <th name="th_model" class="text-center" style="padding: 0.5rem 0 0.5rem 0; height: 2.3rem; line-height: 2.3rem;">
                              <span class="text-uppercase" style="display: inline-block; vertical-align: center; background-color: LightGray; width: 100%; height: 100%; font-size: 0.8rem;">Model</span>
                            </th>
                            <th name="th_quantity" class="text-center" style="padding: 0.5rem 0 0.5rem 0; height: 2.3rem; line-height: 2.3rem;">
                              <span class="text-uppercase" style="display: inline-block; vertical-align: center; background-color: LightGray; width: 100%; height: 100%; font-size: 0.8rem;">Quantity</span>
                            </th>
                            <th name="th_description" class="text-center" style="padding: 0.5rem 0 0.5rem 0; height: 2.3rem; line-height: 2.3rem;">
                              <span class="text-uppercase" style="display: inline-block; vertical-align: center; background-color: LightGray; width: 100%; height: 100%; font-size: 0.8rem;">Description</span>
                            </th>
                            <th name="th_priceunit" class="text-center" style="padding: 0.5rem 0 0.5rem 0;height: 2.3rem; line-height: 2.3rem;">
                              <span class="text-uppercase" style="display: inline-block; vertical-align: center; background-color: LightGray; width: 100%; height: 100%; font-size: 0.8rem;">Unit Price</span>
                            </th>
                            <th name="th_discount" t-if="display_discount" class="text-center" style="padding: 0.5rem 0 0.5rem 0; height: 2.3rem; line-height: 2.3rem;" groups="product.group_discount_per_so_line">
                                <span class="text-uppercase" style="display: inline-block; vertical-align: center; background-color: LightGray; width: 100%; height: 100%; font-size: 0.8rem;">Disc.%</span>
                            </th>
                            <th name="th_taxes" class="text-center" style="padding: 0.5rem 0 0.5rem 0; height: 2.3rem; line-height: 2.3rem;">
                              <span class="text-uppercase" style="display: inline-block; vertical-align: center; background-color: LightGray; width: 100%; height: 100%; font-size: 0.8rem;">Taxes</span>
                            </th>
                            <th name="th_subtotal" class="text-center" style="padding: 0.5rem 0.5rem 0.5rem 0; height: 2.3rem; line-height: 2.3rem;">
                                <t groups="account.group_show_line_subtotals_tax_excluded"><span class="text-uppercase" style="display: inline-block; vertical-align: center; background-color: LightGray; width: 100%; height: 100%; font-size: 0.8rem;">Amount</span></t>
                                <t groups="account.group_show_line_subtotals_tax_included"><span class="text-uppercase" style="display: inline-block; vertical-align: center; background-color: LightGray; width: 100%; height: 100%; font-size: 0.8rem;">Total Price</span></t>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody">

                        <t t-set="current_subtotal" t-value="0"/>

                        <t t-foreach="doc.order_line" t-as="line">

                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type">
                                    <td name="td_ref" class="text-center" style="padding: 0.5rem;">
                                      <span style="display: inline-block; width: 100%;"><t t-esc="line.product_id.default_code"/></span>
                                      <span style="display: inline-block; width: 100%;" t-field="line.product_id.image_128" t-att-title="line.product_id.name" role="img" t-att-aria-label="line.product_id.name" t-options="{&quot;widget&quot;: &quot;image&quot;, &quot;style&quot;:&quot;max-width: 60px; display: inline-block&quot;}"/>
                                    </td>
                                    <td name="td_name" class="text-left" style="padding: 0.5rem;">
                                      <span style="display: inline-block; width: 100%;"><t t-esc="line.product_id.name"/></span>
                                      <span style="display: inline-block; width: 100%;"><t t-esc="line.product_id.description_sale"/></span>
                                    </td>
                                    <td name="td_quantity" class="text-right" style="padding: 0.5rem;">
                                        <span t-field="line.product_uom_qty"/>
                                        <span t-field="line.product_uom" groups="uom.group_uom"/>
                                    </td>
                                    <td name="td_desc" class="text-left" style="padding: 0.5rem;">
                                        <span t-field="line.short_name"/>
                                    </td>
                                    <td name="td_priceunit" class="text-right" style="padding: 0.5rem;">
                                        <span t-field="line.price_unit" t-options="{&quot;widget&quot;: &quot;monetary&quot;}"/>
                                    </td>
                                    <td t-if="display_discount" class="text-right" style="padding: 0.5rem;" groups="product.group_discount_per_so_line">
                                        <span t-field="line.discount"/>
                                    </td>
                                    <td name="td_taxes" class="text-right" style="padding: 0.5rem;">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                    </td>
                                    <td name="td_subtotal" class="text-right o_price_total" style="padding: 0.5rem;">
                                        <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td name="td_section_line" colspan="99" style="padding: 0.5rem;">
                                        <span t-field="line.name"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td name="td_note_line" colspan="99" style="padding: 0.5rem;">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                            </tr>

                            <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-right">
                                    <td name="td_section_subtotal" colspan="99" style="padding: 0.5rem;">
                                        <span class="mr16">Subtotal</span>
                                        <span t-esc="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <table class="table-sm" style="margin-top: 1rem; width: 100%; border-collapse: collapse; border: 1px solid LightGray;">
                  <tbody>
                    <tr>
                      <th style="padding: 0.5rem;"><h5>Additional Information</h5></th>
                    </tr>
                    <tr>
                      <td style="padding: 0.5rem;"><span t-field="doc.comment"/></td>
                    </tr>
                  </tbody>
                </table>

                <table class="table-sm" style="margin-top: 1rem; width: 100%; border-collapse: collapse; border: 1px solid LightGray;">
                    <tr>
                        <td rowspan="3" style="padding: 0.5rem; width: 65%;">
                            <p t-field="doc.note"/>
                            <p t-if="doc.payment_term_id.note">
                                <span t-field="doc.payment_term_id.note"/>
                            </p>
                            <p id="fiscal_position_remark" t-if="doc.fiscal_position_id and doc.fiscal_position_id.sudo().note">
                                Fiscal Position Remark:
                                <span t-field="doc.fiscal_position_id.sudo().note"/>
                            </p>
                        </td>
                        <td name="td_amount_untaxed_label" class="font-weight-bold" style="padding: 0.5rem; width: 25%; border-left: 1px solid LightGray; border-bottom: 0px;">Subtotal</td>
                        <td name="td_amount_untaxed" class="text-right" style="padding: 0.5rem; width: 10%; border-bottom: 0px;">
                            <span t-field="doc.amount_untaxed"/>
                        </td>
                    </tr>
                    <t t-foreach="doc.amount_by_group" t-as="amount_by_group">
                        <tr>
                            <t t-if="amount_by_group[5] == 1 and doc.amount_untaxed == amount_by_group[2]">
                                <td name="td_amount_by_group_label_3" style="padding: 0.5rem; border-left: 1px solid LightGray; border-bottom: 0px;">
                                    <span t-esc="amount_by_group[0]"/>
                                    <span>&amp;nbsp;<span>on</span>&amp;nbsp;<t t-esc="amount_by_group[2]" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/></span>
                                </td>
                                <td name="td_amount_by_group_3" class="text-right" style="padding: 0.5rem; border-bottom: 0px;">
                                    <span t-esc="amount_by_group[1]"
                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                </td>
                            </t>
                            <t t-else ="">
                                <td name="td_amount_by_group_label" style="padding: 0.5rem; border-left: 1px solid LightGray; border-bottom: 0px;">
                                    <span t-esc="amount_by_group[0]"/>
                                </td>
                                <td name="td_amount_by_group" class="text-right" style="padding: 0.5rem; border-bottom: 0px;">
                                    <span t-esc="amount_by_group[1]"
                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                </td>
                            </t>
                        </tr>
                    </t>
                    <tr>
                        <td name="td_amount_total_label" class="font-weight-bold text-uppercase" style="padding: 0.5rem; border-left: 1px solid LightGray; border-bottom: 1px solid LightGray; border-top: 1px solid LightGray;">Total</td>
                        <td name="td_amount_total" class="text-right" style="padding: 0.5rem; border-bottom: 1px solid LightGray; border-top: 1px solid LightGray;">
                            <span t-field="doc.amount_total"/>
                        </td>
                    </tr>
                </table>

                <div class="oe_structure"/>

            </div>
        </t>
    </template>

</odoo>
